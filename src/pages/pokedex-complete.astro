---
// Style Imports
import '../styles/global.css';
import { getColorPalette, getEvolutionChain, getPokemon, getStats, getTypesAndWeaknesses } from '../api/pokemon';
import { Background } from '../components/pokedex-complete/ignore/Background';
import { PokedexHeader } from '../components/pokedex-complete/ignore/PokedexHeader';


import { ReactPicture } from '../components/pokedex-complete/ReactPicture';
import { SolidStats } from '../components/pokedex-complete/SolidStats';
import Svelte from '../components/pokedex-complete/Svelte.svelte';
import VueEvolution from '../components/pokedex-complete/VueEvolution.vue';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/png" href="/pokeball.png" />
		<link rel="stylesheet" href="https://use.typekit.net/tij0xuz.css">
		<title>Pokedex</title>
	</head>
	<body>
		<main class="mb-24">
			<a href="../">
				<h1 class="text-3xl font-bold text-center opacity-70 mt-4" >Astro + TanStack Query</h1>
				<h2 class="text-xl font-semibold text-center opacity-60 mt-2">Pok√©dex Example</h2>
			</a>

			<PokedexHeader client:only="solid" />
			
			<div class="container flex gap-4 items-center px-8 mt-8 justify-between mx-auto max-w-5xl">
				<ReactPicture client:only="react" />
				<SolidStats client:only="solid" />
			</div>

			<div class="container flex gap-4 items-center px-8 mt-4 justify-between mx-auto max-w-5xl">
				<Svelte client:only="svelte" />
				<VueEvolution client:only="vue" />
			</div>

			<Background client:only="react" />
				
		</main>
	</body>
</html>
